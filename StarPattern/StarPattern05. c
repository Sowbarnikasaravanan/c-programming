/* To display the star pattern 
*****
 ****
  ***
   **
    *
*/
#include<stdio.h>
void main(){
    int n,i,j,k;
    printf("Enter the number:");
    scanf("%d",&n);
    for(i=n;i>=1;i--){
        for(k=1;k<=n-i;k++){
            printf(" ");
        }
        for(j=1;j<=i;j++){
            printf("*");
        }
        printf("\n");
    }
}
